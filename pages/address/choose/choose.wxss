.head input{
  width: 80%;
  background-color: #F0F0F0;
  height: 70rpx;
  float: right;
  border-radius: 0 5% 5% 0;
}
.search{
  margin-left: 2%;
  width: 80rpx;
  height: 70rpx;
  background-color: #F0F0F0;
  border-radius: 8% 0 0 8%;
}
.head .Timage{
  position: absolute;
  width: 45rpx;
  height: 45rpx;
  margin-top: 1.5%;
  left: 25%;
  z-index: 999;
}
.contaner{
  width: 100%;
  margin: 5%;
}
.contaner .navname{
  font-weight: 700;
}
.locat{
  width: 95%;
  margin-top: 5%;
  margin-left: -3%;
  border-bottom: 1px solid #D7D7D8;
  min-height: 130rpx;
  height: auto;
  line-height: 50rpx;
  text-align: left;
  overflow: hidden;
  background-color: white;
}
button::after{
  border:none;
}
.locat text:first-child{
  font-weight: 500;
}
.locat text:last-child{
  color: #868686;
  font-size: 30rpx;
  
}

