/* pages/address/choose/choose.wxss */

.head{
  display: flex;
  flex-direction: row;
  width: 90%;
  height: 100rpx;
  margin: 0 auto;
}

.city{
  height: 50rpx;
  float: left;
  width: 20%;
  margin-top: 2%;
  display: flex;
  flex-direction: center;
  justify-content: center;
}
.cityname{
  float: left;
  text-align: left;
  font-size: 30rpx;
  color: #FFA800;
  font-weight: 400;
  line-height: 50rpx;
}
.city image{
  width: 26rpx;
  height: 26rpx;
  margin: 0 auto;
  margin-top: 5%;
}
