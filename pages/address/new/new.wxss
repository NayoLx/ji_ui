/* pages/address/new/new.wxss */
.contaner {
  height: 100%;
  margin-top: 8%;
  margin-left: 5%;
}

.area {
  float: left;
  height: auto;
  min-height: 200rpx;
  width: 90%;
}

.place-holder {
  font-size: 32rpx;
  padding-bottom: 200rpx;
  font-family: PingFang-SC-Regular;
  color: #8c8c8c;
}

.place {
  font-size: 32rpx;
  padding-bottom: 200rpx;
  color: #8c8c8c;
}

.area text {
  display: flex;
  vertical-align: middle;
  justify-content: left;
  font-weight: 700;
  padding-bottom: 25rpx;
  font-family: MicrosoftYaHei-Bold;
}

.line {
  width: 100%;
  border-bottom: 1px solid #bab6b6;
  margin-top: 5rpx;
  padding: 12rpx;
}

.btn {
  position: absolute;
  left: 7%;
  bottom: 100rpx;
  width: 86%;
}

button::after {
  border: none;
}

.btn button {
  border-radius: 90rpx;
  background: linear-gradient(90deg, rgba(255, 230, 30, 1), rgba(255, 207, 16, 1));
  box-shadow: 0px 14rpx 42rpx 0px rgba(165, 165, 165, 0.39);
  font-family: MicrosoftYaHei;
  font-weight: 400;
}
