/* pages/repair/index.wxss */
swiper{
width: 100%;
height: 330rpx;
}

swiper-item{
padding-top: 50rpx;
}

swiper image{
width: 590rpx;
height: 250rpx;
position: absolute;
left: 50%;
margin-left: -295rpx;
box-shadow: 0rpx 5rpx 10rpx  #888888;
border-radius: 5rpx;
}

swiper image.active{
transform: scale(1.14);
transition:all .2s ease-in 0s;
}

.wxtable {
width: 100%;
}
.wxtable image{
  width: 100%;
  height: 90%;
}
.wxtable text{
  font-size: 35rpx;
  margin-left: 5%;
  margin-bottom: 5%;
  font-weight: 600;
  letter-spacing: 4rpx;
  font: MicrosoftYaHei;
}

.wxtr {
display: flex;
width: 100%;
margin: 0 auto;
}

.wxNeed{
  width: 90%;
  height: auto;
  min-height: 200rpx;
  padding: 10rpx;
  margin: 10rpx;
  overflow: hidden; 
  text-align: center;
  box-shadow: 2rpx 2rpx 3rpx 3rpx #dadada;
}

.wxSpeed{
  display: flex;
  flex-direction: column;
  width: 50%;
  height: auto;
  font-size: 29rpx;
  padding: 10rpx;
  padding-top: 20rpx;
}

.wxSpeed .img{
  width: 60rpx;
  height: 59rpx;
  float: left;
  position: absolute;
  margin-left: 60rpx;
}
.wxSpeed text{
  width: 160rpx;
  font-weight: 500;
  font: MicrosoftYaHei;
  font-size: 32rpx;
  position:relative;
  left: 115rpx;
  top: 6rpx;
}
.wxSpeed .imag{
  width: 170rpx;
  height: 32rpx;
  float: right;
  position: relative;
  margin-left: 130rpx;
  margin-top: 15rpx; 
}

.logo_down{
  position: fixed;
  bottom: 130rpx;
  right: 20rpx;
}
.logo_down image{
  width: 120rpx;
  height: 120rpx;
}