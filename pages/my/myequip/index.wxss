/* pages/my/myequip/index.wxss */

page{
  background-color: #eeeff0;
}
.contain {
  border-top: 20rpx solid #f1f2f5;
  background-color: white
}

.head {
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 50rpx;
  padding-bottom: 65rpx;
  border-bottom: 2rpx solid #eeeff0;
}

.head image {
  width: 100rpx;
  height: 90rpx;
  float: left;
}

.head text {
  float: left;
  width: 500rpx;
  padding-left: 30rpx;
  padding-top: 10rpx;
  color: #090909;
  font-size: 35rpx;

}

.head text text {
  height: 26rpx;
  font-size: 25rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color:#717172;
  line-height: 24rpx;
}

.btn {
  width: 55%;
  display: flex;
  flex-direction: row;
  padding: 20rpx 0 20rpx 0;
  position: relative;
  margin-left: 45%;
}

.btn button {
  width: 180rpx;
  height: 70rpx;
  border-radius: 33px;
  font-size: 30rpx;
  line-height: 70rpx;
  background-color: white;
  border: 1px solid rgba(181, 181, 181, 1);
}

button::after {
  border: none;
}

.firstbtn {
  color: #706f6f;
}
