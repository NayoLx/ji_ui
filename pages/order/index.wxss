/* pages/order/index.wxss */

.contain {
  border-top: 20rpx solid #f1f2f5;
  background-color: white
}

.head {
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 50rpx;
  padding-bottom: 65rpx;
  border-bottom: 2rpx solid #eeeff0;
}

.head image {
  width: 100rpx;
  height: 90rpx;
  float: left;
}

.head text {
  float: left;
  width: 320rpx;
  padding-top: 10rpx;
  margin-left: 20rpx;
  color: #090909;
  font-size: 35rpx;

}
.head .image1{
  width: 40rpx;
  height: 40rpx;
  position: relative;
  top: 10rpx;
  left: 40rpx;
  float: left;
}
.head view{
  float: right;
  width: 20%;
}
.head .text1{
  width: 130rpx;
  height: 45rpx;
  font-size: 28rpx;
  line-height: 30rpx;
  position: relative;
  top: -35rpx;
  left: 80rpx;
  float: left;
  color: #FFC104;
}
.head .text2{
  width: 250rpx;
  height: 45rpx;
  font-size: 26rpx;
  line-height: 30rpx;
  position: relative;
  top: 10rpx;
  right: 50rpx;
}
.head text text {
  height: 26rpx;
  font-size: 25rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color:#717172;
  line-height: 24rpx;
  margin-left: -10rpx;
}

.contain view .te{
  width: 35%;
  float: left;
  height: 30rpx;
  font-size: 35rpx;
  line-height: 60rpx;
  vertical-align: middle;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.btn {
  width: 55%;
  display: flex;
  flex-direction: row;
  padding: 20rpx 0 20rpx 0;
  position: relative;
  margin-left: 45%;
}

.btn button {
  width: 180rpx;
  height: 70rpx;
  border-radius: 33px;
  font-size: 30rpx;
  line-height: 70rpx;
  background-color: white;
  border: 1px solid rgba(181, 181, 181, 1);
}

button::after {
  border: none;
}

.firstbtn {
  color: #706f6f;
}

/**index.wxss**/

.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 36px;

}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 33%;
  color: #7a7a7a;
}

.on {
  color: #000004;
  border-bottom: 8rpx solid #fde800;
}
swiper-items{
  height: 100%;
  
}
.scroll-views{
  height: 100%;
  
}

.swiper-box {
  display: block;
  min-height: 100%;
  height: 2000rpx;
  width: 100%;
  background-color: #f1f2f5;
}

/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

